{
  "name": "fun-chat",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css}' --config ./.prettierrc",
    "ci:format": "prettier --check 'src/**/*.{js,jsx,ts,tsx,css}' --config ./.prettierrc",
    "lint": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint . src/**/*.ts --fix",
    "deploy": "npm run build && npx gh-pages -d dist -e fun-chat",
    "prepare": "cd .. && husky fun-chat/.husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-base-typescript": "1.1.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "globals": "15.0.0",
    "husky": "9.0.11",
    "prettier": "3.2.5",
    "typescript": "5.2.2",
    "typescript-eslint": "7.6.0",
    "vite": "5.2.8"
  }
}
